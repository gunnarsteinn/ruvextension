{
  "manifest_version": 3,
  "name": "RÚV Downloader",
  "version": "1.0",
  "description": "Download videos from RÚV",
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "webRequest",
    "scripting",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "*://*.ruv.is/*",
    "*://*.akamaized.net/*",
    "*://api.ruv.is/*"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/background.js"
  }
}